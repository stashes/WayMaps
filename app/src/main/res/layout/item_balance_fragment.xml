<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:textSize="17dp"
        android:textColor="@color/black"
        android:id="@+id/balance_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_weight="1"
        tools:text="20.18.2018"></TextView>

    <TextView
        android:textSize="17dp"
        android:textColor="@color/success"
        android:id="@+id/balance_debet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="+300"></TextView>

    <TextView
        android:textSize="17dp"
        android:textColor="@color/fail"
        android:id="@+id/balance_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="-400"></TextView>

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:id="@+id/balance_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="+100"></TextView>
</LinearLayout>
