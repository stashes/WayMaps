<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="25dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_car_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|end"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Opel GS TR-151, Рівне"></TextView>

        <TextView
            android:id="@+id/history_car_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            tools:text="Stanislav Cheslavskyi"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/HistoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="@string/chosen_period" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/history_period_from"
                        style="@style/HistoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="From" />

                    <TextView
                        android:id="@+id/history_period_to"
                        style="@style/HistoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="To" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                style="@style/HistoryLabel"
                android:text="@string/distance_for_period" />

            <TextView
                android:id="@+id/history_distance"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_burn_fuel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/HistoryLabel"
                android:text="@string/fuel_burned" />

            <TextView
                android:id="@+id/history_burn_fuel"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/history_fuelexpense_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/HistoryLabel"
                android:text="@string/hist_fuelexpense" />

            <TextView
                android:id="@+id/history_fuelexpense"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_maxspeed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/HistoryLabel"
                android:text="@string/hist_max_speed" />

            <TextView
                android:id="@+id/history_maxspeed"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_limit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/HistoryLabel"
                android:text="@string/hist_speed_limit" />

            <TextView
                android:id="@+id/history_limit"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_parkingcount_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/HistoryLabel"
                android:text="@string/hist_parking_count" />

            <TextView
                android:id="@+id/history_parkingcount"
                style="@style/HistoryLabel"
                android:text="1 minute" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
