<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:text="[2017-12-17 12:16]"
        android:textColor="#FF000000"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/ticketDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:textStyle="bold"
        android:text="Техпідтримка"
        android:textColor="#FF000000"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/ticketUsr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>
    <TextView
        android:textColor="#FF000000"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:text="Текст ще інша претензія клієнта до роботи цього обладнання. Розраховувати так. щоб було на три рядки максимум, а все інше не показувати, обривати"
        android:id="@+id/ticketMessage"
        android:layout_width="match_parent"
        android:maxHeight="50dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:textColor="#FF000000"
        android:gravity="right"
        android:textSize="13dp"
        android:text="Прочитано 2017-12-18 12:18"
        android:layout_marginRight="10dp"
        android:id="@+id/ticketReadDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>