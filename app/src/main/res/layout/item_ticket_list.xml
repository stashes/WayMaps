<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mail"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Техпідтримка"
            android:textColor="#FF000000"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/ticketUsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    <TextView
        android:layout_gravity="center"
        android:textStyle="italic"
        android:text="2017-12-17 12:16"
        android:textColor="#FF000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:id="@+id/ticketDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>
    <TextView
        android:layout_marginRight="10dp"
        android:textColor="#FF000000"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:text="Текст ще інша претензія клієнта до роботи цього обладнання. Розраховувати так. щоб було на три рядки максимум, а все інше не показувати, обривати"
        android:id="@+id/ticketMessage"
        android:layout_width="match_parent"
        android:layout_height="65dp">
    </TextView>

</LinearLayout>